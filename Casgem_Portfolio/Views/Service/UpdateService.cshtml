@model Casgem_Portfolio.Models.Entities.TblService
@{
    ViewBag.Title = "UpdateService";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Hizmet Güncelleme Sayfası</h2>

<form method="post">
    @Html.HiddenFor(x => x.ServiceID)
    <label>Hizmet Başlığı</label>
    @Html.TextBoxFor(x => x.ServiceTitle)
    <br />
    <label>Hizmet İkonu</label>
    @Html.TextBoxFor(x => x.ServiceIcon)
    <br />
    <label>Hizmet Numarası</label>
    @Html.TextBoxFor(x => x.ServiceNumber)
    <br />
    <label>Hizmet İçeriği</label>
    @Html.TextBoxFor(x => x.ServiceContent)
    <br />
    <button class="btn btn-success">Verileri Güncelle</button>
</form>