@model IEnumerable<Casgem_Portfolio.Models.Entities.TblReference>
@{
    int count = 0;
}

<section class="w3l-services">
    <div class="blog py-5" id="services">
        <div class="container py-lg-5">
            <h3 class="title-big text-center mb-sm-5 mb-4">Referanslarım</h3>
            <div class="row">
                <div class="col-md-12 mx-auto pr-2">
                    <div class="owl-two owl-carousel owl-theme">
                        @foreach (var item in Model)
                        {
                            count++;
                            <div class="item">
                                <div class="card">
                                    <div class="box-wrap">
                                        <div class="icon">
                                            <span class="fa fa-pencil-square-o"></span>
                                        </div>
                                        <h4 class="number">@count</h4>
                                        <h4><a href="#url">@item.NameSurname</a></h4>
                                        <h5><a href="#url">@item.Title</a></h5>
                                        <p>@item.PhoneNumber</p>
                                        <p>@item.Email</p>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
