@model List<Casgem_Portfolio.Models.Entities.TblProject>

<div class="cusrtomer-layout py-5" id="projeler">
    <div class="container py-lg-5 py-md-4">
        <div class="heading text-center mx-auto">
            <h6 class="title-small text-center">Projelerim</h6>
            <h3 class="title-big mb-md-5 mb-4">Geliştirdiğim Projeler</h3>
            <div class="testimonial-width">
                <div id="owl-demo1" class="owl-carousel owl-theme mb-4">
                    @foreach (var item in Model)
                    {
                        <div class="item">
                            <div class="testimonial-content">
                                <div class="testimonial">
                                    <blockquote>
                                        <q>
                                            @item.Description
                                        </q>
                                    </blockquote>
                                    <div class="testi-des">
                                        <div class="test-img">
                                            <img src="@item.ImageUrl" class="img-fluid" alt="@item.Name">
                                        </div>
                                        <div class="peopl align-self">
                                            <h3>@item.Name</h3>        @*Proje Linki ver*@
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

    </div>

</div>
