@model Casgem_Portfolio.Models.Entities.TblProject

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

@using (Html.BeginForm("Add", "Project", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-horizontal">
        <h4>Proje Ekleme Ekrannı</h4>
        <hr />
        <div class="form-group">
            <label>Proje Adı</label>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label>Proje Özeti</label>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Summary, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label>Proje AÇıklaması</label>
            <div class="col-md-10">
                @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label>Proje Resmi</label>
            <div class="col-md-10">
                <input type="file" name="image" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Proje Oluştur" class="btn btn-outline-info" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Proje Listesine Geri Dön", "Index", null, new { @class = "btn btn-outline-info" })
</div>
