@model IEnumerable<Casgem_Portfolio.Models.Entities.TblProject>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_PortfolioAdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Proje Ekle", "Add")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Summary)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Summary)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            <img title="@Html.DisplayFor(modelItem=>item.Name)" style="height:80px;width:80px; border-radius:50%" src="~/Images/@Html.DisplayFor(modelItem => item.ImageUrl)" alt="@Html.DisplayFor(modelItem=>item.Name)">
        </td>
        <td>
            @Html.ActionLink("Düzenle", "Edit", new { id=item.ProjectID} ,new {@class="btn btn-outline-success"}) |
            @*@Html.ActionLink("Detaylı Gör", "Details", new { id = item.ProjectID }, new { @class = "btn btn-outline-info" })  |*@
            @Html.ActionLink("Sil", "Delete", new { id = item.ProjectID }, new { @class = "btn btn-outline-danger" })
        </td>
    </tr>
}

</table>
